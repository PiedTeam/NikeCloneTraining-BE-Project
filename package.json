{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "naikila_be",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "npx nodemon",
        "build": "tsc && tsc-alias",
        "start": "node dist/src/index.js",
        "prepare": "husky",
        "lint": "pnpm run prettier:fix && pnpm run eslint:check && pnpm run check-types",
        "lint-staged": "lint-staged",
        "prettier:check": "prettier --check . --cache",
        "prettier:fix": "prettier --write . --cache",
        "eslint:fix": "eslint --fix ./src --ext .ts,.tsx,.js,.jsx --max-warnings 0",
        "eslint:check": "eslint ./src --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
        "eslint:debug": "eslint ./src --debug --ext .ts,.tsx,.js,.jsx --max-warnings 0",
        "eslint:check-allow-warning": "eslint --quiet ./src --ext .ts,.tsx,.js,.jsx",
        "check-conflict-prettier-eslint": "npx eslint-config-prettier src/App.tsx --print-config",
        "check-types": "tsc --noemit",
        "getData": "npx ts-node src/utils/getAllDataUser.ts"
    },
    "lint-staged": {
        "*.*": [
            "pnpm run prettier:fix"
        ]
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cookie-session": "^2.1.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "crypto-js": "^4.2.0",
        "cryptojs": "^2.5.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.3.1",
        "express-validator": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "^1.11.4",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "mongodb": "^6.7.0",
        "nodemailer": "^6.9.14",
        "nodemailer-express-handlebars": "^6.1.2",
        "otp-generator": "^4.0.1",
        "passport": "^0.7.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "request": "^2.88.2",
        "twilio": "^5.2.0",
        "validator": "^13.12.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/lodash": "^4.17.5",
        "@types/node": "^20.14.8",
        "@types/nodemailer": "^6.4.15",
        "@types/nodemailer-express-handlebars": "^4.0.5",
        "@types/otp-generator": "^4.0.2",
        "@types/passport-facebook": "^3.0.3",
        "@types/passport-google-oauth20": "^2.0.16",
        "@types/request": "^2.48.12",
        "@types/validator": "^13.12.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "rimraf": "^5.0.7",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.2"
    }
}